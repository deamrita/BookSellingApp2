<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F98B88">

    <ImageView
        android:id="@+id/bookimage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_photo_camera_black_24dp"
        android:layout_gravity="center"
        android:paddingTop="40dp"
        />
    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/buttonstyle"
        android:text=" Choose image"
        android:textSize="15dp" />
    <Button
        android:id="@+id/button6"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/buttonstyle"
        android:text="Save image"
        android:textSize="15dp" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/bookName"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:hint="Enter Your Book Name"
        android:textSize="20dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:background="@drawable/edittextstyle"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/bookAuthor"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:hint="Enter the Author/publisher Name"
        android:textSize="16dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:background="@drawable/edittextstyle"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/sem"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:hint="Enter Semester"
        android:textSize="20dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:background="@drawable/edittextstyle"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/price"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:hint="Enter Your Book Price"
        android:textSize="20dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:background="@drawable/edittextstyle"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"></Spinner>

    <Button
        android:id="@+id/button4"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttonstyle"
        android:text="Save Info"
        android:textSize="20dp" />
</LinearLayout>